{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "analyze": "ANALYZE=true next build",
    "analyze-server": "BUNDLE_ANALYZE=server next build",
    "analyze-browser": "BUNDLE_ANALYZE=browser next build",
    "perf-test": "npm run build && npm run analyze",
    "lighthouse": "lhci autorun",
    "pa11y": "pa11y --standard WCAG2AA --runner axe http://localhost:3000/en && pa11y --standard WCAG2AA --runner axe http://localhost:3000/en/about && pa11y --standard WCAG2AA --runner axe http://localhost:3000/en/personal/banking",
    "bundle-size": "npm run build && du -sh .next",
    "optimize": "npm run perf-test && echo 'Check .next/performance-report.json for optimization suggestions'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@diboas/i18n": "workspace:*",
    "@diboas/ui": "workspace:*",
    "@sentry/nextjs": "^10.32.1",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.36.0",
    "dompurify": "^3.3.0",
    "lucide-react": "^0.544.0",
    "next": "^16.1.1",
    "posthog-js": "^1.313.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intl": "^6.4.7",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^4.5.2",
    "vitest": "^3.2.4",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.3",
    "@next/eslint-plugin-next": "^15.5.4",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/nextjs": "^9.1.17",
    "@storybook/react": "^9.1.17",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^25.0.3",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.21",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-storybook": "^9.1.10",
    "pa11y": "^9.0.1",
    "postcss": "^8.5.6",
    "storybook": "^9.1.17",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2"
  }
}
