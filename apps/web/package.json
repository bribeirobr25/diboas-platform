{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "analyze-server": "BUNDLE_ANALYZE=server next build",
    "analyze-browser": "BUNDLE_ANALYZE=browser next build",
    "perf-test": "npm run build && npm run analyze",
    "lighthouse": "lhci autorun",
    "bundle-size": "npm run build && du -sh .next",
    "optimize": "npm run perf-test && echo 'Check .next/performance-report.json for optimization suggestions'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@diboas/i18n": "workspace:*",
    "@diboas/ui": "workspace:*",
    "@formatjs/intl-localematcher": "^0.4.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "critters": "^0.0.25",
    "lucide-react": "^0.544.0",
    "negotiator": "^0.6.3",
    "next": "^15.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intl": "^6.4.7",
    "tailwind-merge": "^2.0.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@next/bundle-analyzer": "^15.5.3",
    "@next/eslint-plugin-next": "^15.5.4",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/nextjs": "^9.1.10",
    "@storybook/react": "^9.1.10",
    "@tailwindcss/typography": "^0.5.0",
    "@types/negotiator": "^0.6.1",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.21",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-storybook": "^9.1.10",
    "postcss": "^8.5.6",
    "storybook": "^9.1.10",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2"
  }
}
